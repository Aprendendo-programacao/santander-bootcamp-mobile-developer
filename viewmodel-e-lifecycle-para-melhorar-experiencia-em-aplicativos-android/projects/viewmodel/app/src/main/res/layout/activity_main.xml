<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:text="Contador"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtContador"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnDados"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dados"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/txtContador"
        app:layout_constraintEnd_toEndOf="@+id/txtContador"
        app:layout_constraintStart_toStartOf="@+id/txtContador" />

    <Button
        android:id="@+id/btnMostrar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mostrar"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/btnDados"
        app:layout_constraintEnd_toEndOf="@+id/btnDados"
        app:layout_constraintStart_toStartOf="@+id/btnDados" />

</androidx.constraintlayout.widget.ConstraintLayout>